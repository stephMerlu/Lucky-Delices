{% set title = "Présentation d'un utilisateur" %}
{% extends 'admin_with_table.html.twig' %}

{% block table_content %}
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    <div class="d-flex justify-content-between">
        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-add active mt-2">Modifier</a>
        {{ include('admin/user/_delete_form.html.twig') }}
    </div>
    <a href="{{ path('app_admin_user_index') }}" class="btn btn-return active mt-2 mb-2">Retour à la liste</a>
{% endblock %}
