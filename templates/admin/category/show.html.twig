{% set title = "Liste des catégories" %}
{% extends 'admin_with_table.html.twig' %}

{% block table_content %}
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    <div class="d-flex justify-content-between">
    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-add active mt-2">Modifier</a>
    {{ include('admin/category/_delete_form.html.twig') }}
    </div>
    <a href="{{ path('app_admin_category_index') }}" class="btn btn-return active mt-2 mb-2">Retour à la liste</a>
{% endblock %}
