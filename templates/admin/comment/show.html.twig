{% set title = "Liste des commentaires" %}
{% extends 'admin_with_table.html.twig' %}

{% block table_content %}
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Validated</th>
                <td>{{ comment.validated ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    <div class="d-flex justify-content-between">
        <a href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}" class="btn btn-add active mt-2">Modifier</a>
        {{ include('admin/comment/_delete_form.html.twig') }}
    </div>
    <a href="{{ path('app_admin_comment_index') }}" class="btn btn-return active mt-2 mb-2">Retour Ã  la liste</a>

{% endblock %}
