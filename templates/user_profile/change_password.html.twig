{% extends 'base.html.twig' %}

{% block title %}Change password{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-4 mt-5">Changer mon mot de passe</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 ms-5">
            <div class="card mt-3">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="form-group mb-3">
                            {{ form_label(form.currentPassword, 'Mot de passe actuel', {'label_attr': {'class': 'fs-5'}}) }}
                            {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.plainPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'fs-5'}}) }}
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.plainPassword.second, 'Confirmer le nouveau mot de passe', {'label_attr': {'class': 'fs-5'}}) }}
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <button type="submit" class="btn btn-add active mt-2 float-end">Changer le mot de passe</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


