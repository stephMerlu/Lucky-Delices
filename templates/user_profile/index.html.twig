{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-5">Mon compte</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">
                        <h2>Mes identifiants</h2>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4 mt-2">Mon e-mail:</dt>
                            <dd class="col-sm-8 mt-2">{{ app.user.email }}</dd>
                            <dt class="col-sm-4 mt-2">Mon username:</dt>
                            <dd class="col-sm-8 mt-2">{{ app.user.username }}</dd>
                            <dt class="col-sm-4 mt-3">Mon mot de passe:</dt>
                            <dd class="col-sm-8 mt-2"><a href="{{ path('change_password') }}" class="btn btn-add active">Changer mon mot de passe</a></dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">
                        <h2>Mes informations</h2>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Mon nom de famille:</dt>
                            <dd class="col-sm-8">{{ firstName }}</dd>
                            <dt class="col-sm-4">Mon prénom:</dt>
                            <dd class="col-sm-8">{{ lastName }}</dd>
                            <dt class="col-sm-4">Ma description:</dt>
                            <dd class="col-sm-8">{{ description }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <a href="{{ path('user_profile_edit') }}" class="btn btn-add active float-end">Modifier le profil</a>
    
            <div class="row mt-5">
            <div class="col-md-12">
                <h2>Recettes aimées</h2>
                {% if likedRecipes is empty %}
                    <p>Aucune recette aimée pour le moment.</p>
                {% else %}
                    <ul>
                    {% for liked in likedRecipes %}
                    <a href="{{ path('presentation_recipe', {'recipeId': liked.recipe.id}) }}">{{ liked.recipe.name }}</a>
                    <br>
                {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
