{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="text-center">
        <div class="card my-5 d-inline-block mx-auto">
            <div class="card-header my-custom-header text-center align-items-center d-flex justify-content-center">
                <h1 class="h3 mb-0 fw-normal">Réinitialiser votre mot de passe</h1>
            </div>
            <div class="card-body">
                {{ form_start(resetForm) }}
{{ form_row(resetForm.plainPassword, {
    'row_attr': {'class': 'mb-3'},
    'label_attr': {'class': 'ms-2'},
    'attr': {'class': 'form-control'}
}) }}                    <button class="btn btn-add active mt-3">Réinitialiser le mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
